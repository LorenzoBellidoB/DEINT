<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vmodel="clr-namespace:EJercicio02.Models.ENT"
             x:Class="EJercicio02.MainPage">

    <ContentPage.BindingContext>
        <vmodel:ClsPersona></vmodel:ClsPersona>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry Text="{Binding Nombre, Mode=TwoWay}"></Entry>
            <Label Text="{Binding Nombre}"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio01.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Button
                x:Name="btn1"
                Text="Boton 1"
                BackgroundColor="Blue"
                HeightRequest="70"
                WidthRequest="200"
                FontFamily="Verdana"
                FontSize="16"
                FontAttributes="Bold"
                BorderColor="Yellow"
                BorderWidth="5"
                Margin="30"
                />

            <Button
                x:Name="btn2"
                Text="Boton 2"
                Clicked="onClickedBtn2"
                BackgroundColor="Blue"
                HeightRequest="70"
                WidthRequest="200"
                FontFamily="Verdana"
                FontSize="16"
                FontAttributes="Bold"
                BorderColor="Yellow"
                BorderWidth="5"
                Margin="30"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

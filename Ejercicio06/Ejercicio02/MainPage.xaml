<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio02.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Slider x:Name="slider" VerticalOptions ="Center">
                
            </Slider>

            <ProgressBar x:Name="barra" BindingContext="{x:Reference slider}" ProgressColor="Yellow" Progress="{Binding Path=Value}" ></ProgressBar>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

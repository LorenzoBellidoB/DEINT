<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:EjercicioShell.Views"
       x:Class="EjercicioShell.AppShell">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Vehiculos"
             Icon="vehicle.png">
            <ShellContent Title="Coches"
                          Icon="car.png"
                          ContentTemplate="{DataTemplate views:Coche}" />
            <ShellContent Title="Motos"
                          Icon="moto.png"
                          ContentTemplate="{DataTemplate views:Moto}" />
        </Tab>
      
        <ShellContent Title="BMW"
                      Icon="bmw.png"
                      ContentTemplate="{DataTemplate views:Bmw}" />
        <ShellContent Title="Ferrari"
                      Icon="ferrari.png"
                      ContentTemplate="{DataTemplate views:Ferrari}" />

    </FlyoutItem>

</Shell>

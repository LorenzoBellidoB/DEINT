<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MandalorianoDificil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MandalorianoDificil"
    xmlns:views="clr-namespace:MandalorianoDificil.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MandalorianoDificil">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
        Title="Listado de Misiones"
        ContentTemplate="{DataTemplate views:ListadoMisiones}"
        Route="ListadoMisiones" />

    <ShellContent
        Title="Listado de Misiones Completadas"
        ContentTemplate="{DataTemplate views:ListadoMisionesCompletadas}"
        Route="MisionesCompletadas" />

    </FlyoutItem>
    
</Shell>

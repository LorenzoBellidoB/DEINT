<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1.MainPage">
    <Border Stroke="Purple"
           Margin="15"
           StrokeShape ="RoundRectangle 10,10,0,0"
            StrokeThickness="5">
        <StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Boton1" WidthRequest="100" BorderWidth="2" BorderColor="Black" Padding="5"></Button>
            <Button Text="Boton2" WidthRequest="100"></Button>
            <Button Text="Boton3" WidthRequest="100"></Button>
            <StackLayout Orientation="Horizontal">
                <Label Text="Nombre: " FontAttributes="Bold"></Label>
                <Entry MinimumWidthRequest="200" BackgroundColor="AliceBlue"></Entry>
            </StackLayout>
        </StackLayout>
    </Border>

</ContentPage>
